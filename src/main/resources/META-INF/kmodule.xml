<?xml version="1.0" encoding="UTF-8"?>
<kmodule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://www.drools.org/xsd/kmodule">

    <kbase name="credit" equalsBehavior="equality" packages="rules.creditRules">
        <ksession name="my-credit-ksession" default="true" />
    </kbase>

    <kbase name="shop" equalsBehavior="identity" packages="rules.shopRules">
        <ksession name="my-shop-ksession" />
    </kbase>

    <kbase name="shop-dsl" equalsBehavior="identity" packages="rules.shopRules.dsl">
        <ksession name="my-shop-dsl-ksession" />
    </kbase>

</kmodule>