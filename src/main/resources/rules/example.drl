package rules

dialect "java"

import model.Customer
import scala.collection.mutable.Map
global org.slf4j.Logger logger

rule "My first rule"
    when
        Customer($name:name, age < 18)
    then
        logger.info("My first rule works!");
end

rule "My second rule"
     when
        Customer($name:name, age >= 18)
     then
        logger.info("My second rule works!");
end